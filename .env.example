# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=postgres
DB_DATABASE=tallie_restaurant
DB_SYNC=true
DB_LOGGING=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0
CACHE_TTL=3600

# Application Configuration
TIMEZONE=Africa/Lagos
DEFAULT_RESERVATION_DURATION=120
PEAK_HOURS_START=18:00
PEAK_HOURS_END=21:00
PEAK_HOURS_MAX_DURATION=90
MAX_ADVANCE_BOOKING_DAYS=30

# Notification Configuration (Mock)
ENABLE_NOTIFICATIONS=true
NOTIFICATION_FROM_EMAIL=reservations@tallie.com
NOTIFICATION_FROM_PHONE=+1234567890

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Logging
LOG_LEVEL=info
LOG_FILE_PATH=logs/app.log